{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: clang build active file",
            "type": "shell",
            "command": "/usr/bin/clang", 
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g", 
                "${file}", 
                "-o", 
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generated task by Debugger."
        }
    ]
}